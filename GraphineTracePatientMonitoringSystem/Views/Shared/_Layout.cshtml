@*
    Shared layout for the whole site.
    Provides left sidebar + main content area.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GrapheneTrace Patient Monitoring System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraphineTracePatientMonitoringSystem.styles.css" asp-append-version="true" />
</head>
<body class="gt-body">
    <div class="gt-page">

        <!-- Left sidebar -->
        <aside class="gt-sidebar">
            @await Html.PartialAsync("~/Views/Patient/_PatientSidebar.cshtml")
        </aside>

        <!-- Main content -->
        <main role="main" class="gt-main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
