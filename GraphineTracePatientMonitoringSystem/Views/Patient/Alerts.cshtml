@model List<GraphineTracePatientMonitoringSystem.Models.Alert>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Alerts";
}

<div class="gt-frame">
    <h2 class="page-title">Alerts</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="badge bg-success">Status: Normal</span>
        <span class="text-muted small">Pressure</span>
    </div>

    <div class="card gt-card">
        <div class="card-body">
            <h5 class="mb-3">Recent Alerts</h5>

            @foreach (var alert in Model)
            {
                string cardClass = "alert-normal";
                if (alert.Severity.ToLower() == "high") cardClass = "alert-high";
                else if (alert.Severity.ToLower() == "medium") cardClass = "alert-medium";

                <div class="alert-card @cardClass mb-2">
                    <div class="alert-icon">
                        @if (alert.Severity.ToLower() == "high")
                        {
                            @:⚠️
                        }
                        else if (alert.Severity.ToLower() == "medium")
                        {
                            @:⏱
                        }
                        else
                        {
                            @:✅
                        }
                    </div>
                    <div class="alert-content">
                        <div class="alert-time">@alert.Time.ToString("dd MMM yyyy HH:mm")</div>
                        <div class="alert-title">@alert.Title</div>
                        <div class="alert-text">@alert.Message</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
