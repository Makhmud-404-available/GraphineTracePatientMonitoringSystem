@model List<GraphineTracePatientMonitoringSystem.Models.Alert>

@{
    ViewData["Title"] = "Alerts";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3 mb-3">
            @await Html.PartialAsync("_PatientSidebar")
        </div>

        <div class="col-md-9">
            <h2>Alerts</h2>
            <p class="text-muted">All recent pressure and movement alerts for this patient.</p>

            @if (Model.Count == 0)
            {
                <p>No alerts recorded.</p>
            }
            else
            {
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Type</th>
                            <th>Severity</th>
                            <th>Message</th>
                            <th>Acknowledged</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var alert in Model)
                        {
                            <tr>
                                <td>@alert.Timestamp.ToString("g")</td>
                                <td>@alert.Type</td>
                                <td>@alert.Severity</td>
                                <td>@alert.Message</td>
                                <td>@(alert.IsAcknowledged ? "Yes" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
