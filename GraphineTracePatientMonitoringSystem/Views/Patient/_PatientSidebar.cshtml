@{
    var active = ViewBag.ActivePage as string ?? "";
}

<aside class="gt-sidebar">
    <div class="sidebar-logo">
        <div class="logo-circle">GT</div>
    </div>

    <nav class="sidebar-nav">
        <!-- Dashboard -->
        <a href="@Url.Action("Index", "Patient")"
           class="sidebar-icon @(active == "Dashboard" ? "active" : "")"
           title="Dashboard">
            <span>☰</span>
        </a>

        <!-- Pressure analysis -->
        <a href="@Url.Action("PressureAnalysis", "Patient")"
           class="sidebar-icon @(active == "Analysis" ? "active" : "")"
           title="Pressure analysis">
            <span>📈</span>
        </a>

        <!-- Comments -->
        <a href="@Url.Action("ReviewClinician", "Patient")"
           class="sidebar-icon @(active == "Comments" ? "active" : "")"
           title="Comments">
            <span>💬</span>
        </a>

        <!-- Alerts -->
        <a href="@Url.Action("Alerts", "Patient")"
           class="sidebar-icon @(active == "Alerts" ? "active" : "")"
           title="Alerts">
            <span>⚠️</span>
        </a>
    </nav>
</aside>
