@{
    // which page is active (set in PatientController)
    var active = ViewBag.ActivePage as string ?? "";
}

<div class="gt-sidebar">
    <div class="gt-sidebar-top">
        <div class="gt-logo-circle">
            GT
        </div>
    </div>

    <nav class="gt-sidebar-nav">
        <!-- Dashboard -->
        <a asp-controller="Patient"
           asp-action="Index"
           class="sidebar-item @(active == "Dashboard" ? "active" : "")"
           title="Dashboard">
            <span>☷</span>
        </a>

        <!-- Pressure analysis -->
        <a asp-controller="Patient"
           asp-action="PressureAnalysis"
           class="sidebar-item @(active == "Analysis" ? "active" : "")"
           title="Pressure analysis">
            <span>⏱</span>
        </a>

        <!-- Comments / clinician review -->
        <a asp-controller="Patient"
           asp-action="ReviewClinician"
           class="sidebar-item @(active == "Comments" ? "active" : "")"
           title="Comments">
            <span>💬</span>
        </a>

        <!-- Alerts -->
        <a asp-controller="Patient"
           asp-action="Alerts"
           class="sidebar-item @(active == "Alerts" ? "active" : "")"
           title="Alerts">
            <span>⚠️</span>
        </a>
    </nav>
</div>
