@model GraphineTracePatientMonitoringSystem.Models.PatientPressureAnalysisViewModel
@await Html.PartialAsync("PatientSidebar")
@{
    ViewData["Title"] = "Patient Pressure Analysis";
}

<div class="container-fluid p-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-auto">
            @await Html.PartialAsync("_PatientSidebar")
        </div>

        <!-- Main content -->
        <div class="col">
            <h2 class="mb-4">Patient Pressure Analysis</h2>

            <!-- Table of pressure checks -->
            <div class="card mb-4">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date/Time</th>
                                <th>Metric</th>
                                <th>Value</th>
                                <th>Risk Level</th>
                                <th>Body area</th>
                                <th>Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var check in Model.PressureChecks)
                            {
                                <tr>
                                    <td>@check.CheckTime</td>
                                    <td>@check.MetricName</td>
                                    <td>@check.Value</td>
                                    <td>@check.RiskLevel</td>
                                    <td>@check.BodyArea</td>
                                    <td>@check.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Graph placeholder -->
            <div class="card">
                <div class="card-body">
                    <h5>Pressure Metrics Over Time</h5>
                    <p class="text-muted">
                        This section can later show a chart of pressure over the last hours
                        (using the same CSV/pressure data). For now it is a placeholder.
                    </p>
                    <div class="border rounded p-5 text-center">
                        [ Chart placeholder ]
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
