@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Comments";
}

<div class="gt-frame">
    <h2 class="page-title">Comments</h2>

    <div class="card gt-card">
        <div class="card-body">
            <h5 class="mb-3">My doctor’s feedback &amp; advice</h5>

            <div class="mb-3">
                <label class="form-label">Doctor’s latest review</label>
                <textarea class="form-control" rows="3" readonly
                          placeholder="Your doctor’s summary about your current pressure-ulcer risk will appear here."></textarea>
                <small class="text-muted">This text is shown to you and cannot be edited.</small>
            </div>

            <div class="mb-3">
                <label class="form-label">What my doctor recommends</label>
                <textarea class="form-control" rows="3" readonly
                          placeholder="Example: change position every 2 hours, check skin on lower back and heels, drink more water…"></textarea>
                <small class="text-muted">These are your doctor’s recommendations.</small>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">How urgent this is</label>
                    <select class="form-select" disabled>
                        <option selected>Medium – follow within a few days</option>
                    </select>
                    <small class="text-muted">Set by your doctor.</small>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Follow-up appointment</label>
                    <select class="form-select" disabled>
                        <option selected>Within 1 week</option>
                    </select>
                    <small class="text-muted">Next review date chosen by your doctor.</small>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-success" disabled>Mark as read (not active in prototype)</button>
                <button class="btn btn-outline-secondary" disabled>Save for later (not active)</button>
                <button class="btn btn-outline-danger" disabled>Cancel</button>
            </div>
        </div>
    </div>
</div>
