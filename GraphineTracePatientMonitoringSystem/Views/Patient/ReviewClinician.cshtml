@{
    ViewData["Title"] = "Comments";
}

<div class="gt-frame">
    <h2 class="page-title">Comments</h2>

    <div class="card gt-card">
        <div class="card-body">
            <h5 class="mb-3">Doctor Feedback &amp; Recommendations</h5>

            <div class="mb-3">
                <label class="form-label">Patient review</label>
                <textarea class="form-control" rows="3"
                          placeholder="Enter the feedback to the recent patient's high risk ulcers alert"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Recommendations</label>
                <textarea class="form-control" rows="3"
                          placeholder="Add recommendations for the patient (e.g., medication adjustments, lifestyle changes, follow-up schedule)..."></textarea>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Priority level</label>
                    <select class="form-select">
                        <option>Select priority</option>
                        <option>Low</option>
                        <option>Medium</option>
                        <option>High</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Follow-up required</label>
                    <select class="form-select">
                        <option>Select timeframe</option>
                        <option>In 24 hours</option>
                        <option>In 3 days</option>
                        <option>In 1 week</option>
                    </select>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-success">Submit feedback</button>
                <button class="btn btn-outline-secondary">Save as draft</button>
                <button class="btn btn-outline-danger">Cancel</button>
            </div>
        </div>
    </div>
</div>
