@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Comments";
}

<div class="gt-frame">
    <h2 class="page-title">Comments</h2>

    <div class="card gt-card">
        <div class="card-body">
            <h5 class="mb-3">My doctor’s feedback &amp; advice</h5>

            <div class="mb-3">
                <label class="form-label">Doctor’s latest review</label>
                <textarea class="form-control" rows="3"
                          placeholder="Your doctor’s summary about your current pressure-ulcer risk will appear here."></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">What my doctor recommends</label>
                <textarea class="form-control" rows="3"
                          placeholder="Example: change position every 2 hours, check skin on lower back and heels, drink more water…"></textarea>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">How urgent this is</label>
                    <select class="form-select">
                        <option>Select urgency</option>
                        <option>Low – routine advice</option>
                        <option>Medium – follow within a few days</option>
                        <option>High – follow today</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Follow-up appointment</label>
                    <select class="form-select">
                        <option>Select follow-up</option>
                        <option>No follow-up scheduled</option>
                        <option>Within 1 week</option>
                        <option>Within 1 month</option>
                    </select>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-success">Mark as read</button>
                <button class="btn btn-outline-secondary">Save for later</button>
                <button class="btn btn-outline-danger">Cancel</button>
            </div>
        </div>
    </div>
</div>
